# HB PAUSE

#---  ccmp feature (pass 3) ---

feature ccmp {  # Glyph Composition/Decomposition
    # Same for latin & syriac:
        lookup FontCheck;             # not in ESM
    script latn;
        lookup LatinPunctuation;      # not in ESM
    script syrc;
        lookup DecomposePthahadotted; # was GPreDecompose
        lookup SeyameChain;           # not in ESM
        lookup LamAlaphLig;           # was r1
        lookup AlaphLigs;             # was r2
        lookup RukkakhaSquare;        # was SquareDot
      # Force other languages to include Syriac script lookups
      language SYRN ;  # syc, syr
      language SYR ;  # aii, amw, cld, syc, syr, tru
} ccmp ;

