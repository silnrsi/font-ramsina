# This is used for the final forms after a right-joining character
lookup cv_fina {
  lookupflag IgnoreMarks RightToLeft;
sub [kaph-syriac mim-syriac nun-syriac] by [kaph-syriac.cv15 mim-syriac.cv17 nun-syriac.cv18];
